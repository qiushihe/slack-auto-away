{
  "name": "slack-auto-away",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "test": "npm-run-all test:tsc test:lint test:unit",
    "test:tsc": "tsc --noemit --skipLibCheck",
    "test:lint": "eslint --ext .ts ./src ./test ./type",
    "test:lint:fix": "npm-run-all test:lint:fix:eslint test:lint:fix:terraform",
    "test:lint:fix:eslint": "npm run test:lint -- --fix",
    "test:lint:fix:terraform": "terraform fmt -recursive",
    "test:unit": "npm-run-all test:unit:clean test:unit:jest",
    "test:unit:clean": "shx rm -rf .coverage",
    "test:unit:jest": "jest --config jest.config.json --runInBand --logHeapUsage --coverage",
    "build": "npm-run-all build:clean build:rollup",
    "build:clean": "shx rm -rf .build",
    "build:rollup": "ts-node --esm ./script/rollup-build.ts ./src/functions",
    "deploy": "npm-run-all build deploy:terraform:init deploy:terraform:apply:auto",
    "deploy:terraform:init": "terraform init",
    "deploy:terraform:apply": "terraform apply",
    "deploy:terraform:apply:auto": "npm run deploy:terraform:apply -- -auto-approve"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/aws-lambda": "^8.10.126",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rollup": "^4.3.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.445.0"
  }
}
